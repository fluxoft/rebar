<?xml version="1.0"?>
<ruleset name="fluxoft">
    <description>fluxoft coding standard</description>

    <!-- Disallow duplicate class names across files -->
    <rule ref="Generic.Classes.DuplicateClassName"/>

    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>

    <rule ref="Generic.ControlStructures.InlineControlStructure"/>

    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>

    <!-- Disallow spaces for indenting, require a single indent level (one tab) -->
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="1"/>
        </properties>
    </rule>

    <!-- Opening braces on the same line as the declaration -->
    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>

</ruleset>